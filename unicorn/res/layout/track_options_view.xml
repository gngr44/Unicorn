<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/GainOption"
        android:layout_width="@dimen/track_option_width_height"
        android:layout_height="@dimen/track_option_width_height"
        android:layout_centerVertical="true"
        android:background="@drawable/track_gain_option_background"
        android:gravity="center"
        android:text="GAIN"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/SampleRateOption"
        android:layout_width="@dimen/track_option_width_height"
        android:layout_height="@dimen/track_option_width_height"
        android:layout_centerHorizontal="true"
        android:background="@drawable/track_sample_rate_option_background"
        android:gravity="center"
        android:text="SAMPLE RATE"
        android:textSize="12sp" />

</RelativeLayout>